<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="air.smart_print_c.activity_set_ip">

    <GridLayout
        android:layout_width="215dp"
        android:layout_height="186dp"
        android:columnCount="2"
        android:forceHasOverlappingRendering="true"
        android:rowCount="2"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_column="0"
            android:layout_gravity="top|center_horizontal"
            android:layout_row="0"
            android:text="@string/label_set_ip_cap"
            android:textSize="8sp" />

        <EditText
            android:id="@+id/ip_editText"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_column="1"
            android:layout_gravity="top|left|center_horizontal"
            android:layout_row="0"
            android:digits="0123456789."
            android:ems="10"
            android:gravity="left|center_horizontal"
            android:inputType="number"
            android:maxLength="15" />

        <Button
            android:id="@+id/save_ip_but"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_column="0"
            android:layout_gravity="top|center_horizontal"
            android:layout_row="1"
            android:text="@string/Button_save_ip"
            android:textSize="8sp" />

        <Button
            android:id="@+id/set_ip_but"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_column="1"
            android:layout_gravity="top|left|center_horizontal"
            android:layout_row="1"
            android:gravity="center_horizontal"
            android:text="@string/Button_set_ip"
            android:textSize="8sp" />
    </GridLayout>

</android.support.constraint.ConstraintLayout>
